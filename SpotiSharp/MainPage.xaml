<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SpotiSharp.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">
            <Button
                x:Name="Connect"
                Text="Connect"
                Command="{Binding ConnectToSpotifyAPI}"
                HorizontalOptions="Center" />
            <Button
                x:Name="SongBack"
                Text="back"
                Command="{Binding SongBack}"
                HorizontalOptions="Center" />
            <Button
                x:Name="SongPausePlay"
                Text="Play/Pause"
                Command="{Binding SongPausePlay}"
                HorizontalOptions="Center" />
            <Button
                x:Name="SongNext"
                Text="Next"
                Command="{Binding SongNext}"
                HorizontalOptions="Center" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
